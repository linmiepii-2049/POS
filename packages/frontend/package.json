{
  "name": "@pos/frontend",
  "version": "1.0.0",
  "description": "POS 系統前端應用程式",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build",
    "preview": "vite preview --host --strictPort --port 3000",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 35",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "pwa:icons": "node scripts/build-icons.mjs",
    "pwa:icons:verify": "node scripts/verify-icons.mjs",
    "pwa:api:check": "node scripts/check-api.mjs",
    "pwa:prep": "pnpm run pwa:icons && pnpm run pwa:icons:verify && pnpm run pwa:api:check",
    "pwa:full": "pnpm run pwa:prep && pnpm run build && pnpm run preview"
  },
  "dependencies": {
    "@pos/sdk": "workspace:*",
    "@tanstack/react-query": "^5.0.0",
    "clsx": "^2.0.0",
    "date-fns": "^3.0.0",
    "html5-qrcode": "^2.3.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.0.0",
    "react-hook-form": "^7.0.0",
    "react-hot-toast": "^2.4.0",
    "react-router-dom": "^6.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-router-dom": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.4.0",
    "jsdom": "^23.0.1",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.49",
    "sharp": "^0.33.0",
    "tailwindcss": "^3.4.15",
    "terser": "^5.24.0",
    "typescript": "^5.5.4",
    "vite": "^6.0.1",
    "vitest": "^1.0.0"
  }
}
