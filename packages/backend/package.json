{
  "name": "@pos/backend",
  "version": "1.0.0",
  "description": "POS 系統後端 API",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --port 8787",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/ scripts/ --ext .ts",
    "typecheck": "tsc --noEmit",
    "preflight": "pnpm run lint && pnpm run typecheck && pnpm run test",
    "e2e:smoke": "tsx scripts/e2e-smoke.ts",
    "openapi": "tsx scripts/gen-openapi.ts",
    "spectral": "spectral lint docs/openapi.json --ruleset docs/.spectral.yaml",
    "client:gen": "orval --config orval.config.ts && node scripts/post-generate-sdk.js && cd ../sdk && pnpm run build",
    "sdk:update": "pnpm run openapi && pnpm run spectral && pnpm run client:gen",
    "d1:apply": "wrangler d1 migrations apply --local pos-local",
    "d1:reset": "rm -rf .wrangler/state && wrangler d1 migrations apply --local pos-local",
    "d1:seed": "wrangler d1 execute --local pos-local --file seeds/0001_seed.sql",
    "d1:seed:full": "wrangler d1 execute --local pos-local --file seeds/0005_complete_data_seed.sql",
    "d1:seed:script": "bash scripts/seed-data.sh",
    "d1:console": "wrangler d1 execute --local pos-local",
    "d1:migrate:staging": "wrangler d1 migrations apply --env staging pos-db-staging",
    "d1:seed:staging": "wrangler d1 execute --env staging pos-db-staging --file seeds/0005_complete_data_seed.sql"
  },
  "dependencies": {
    "@pos/sdk": "workspace:*",
    "@hono/zod-openapi": "^1.1.3",
    "@stoplight/spectral-cli": "^6.15.0",
    "hono": "^4.0.0",
    "orval": "^7.11.2",
    "swagger-ui-dist": "^5.29.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "wrangler": "^4.38.0"
  }
}
